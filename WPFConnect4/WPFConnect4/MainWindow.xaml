        <Button FontSize="20" x:Name="instructionsBtn" Content="Instructions" HorizontalAlignment="Left" Margin="821,141,0,0" VerticalAlignment="Top" Width="120" Height="50" Click="InstructionsBtn_Click"/>
        <Label FontSize="28" x:Name="player1Icon" Content="Player 1" HorizontalAlignment="Left" Margin="681,217,0,0" VerticalAlignment="Top" Height="50" Width="120"/>
